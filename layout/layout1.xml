<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#3B0D53"
    app:ignore="NamespaceTypo"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#CAB5CD"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="100dp"
        card_view:contentPadding="16dp">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="269dp"
            android:layout_height="48dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:text="Account no : 12345XXXXXX" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view1"
        android:layout_below="@id/card_view"
        android:layout_width="380dp"
        android:layout_height="250dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#CAB5CD"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="100dp"
        card_view:contentPadding="16dp"
        android:layout_above="@id/card_view">

        <Button
            android:id="@+id/button"
            android:layout_width="141dp"
            android:layout_height="143dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"
            android:background="#3B0D53"
            android:text="Send Money"
            android:textColor="#CAB5CD" />

        <Button
            android:id="@+id/button2"
            android:layout_width="141dp"
            android:layout_height="143dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="50dp"
            android:background="#3B0D53"
            android:text="Payment Request"
            android:textColor="#CAB5CD" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view5"
        android:layout_below="@id/card_view"
        android:layout_width="380dp"
        android:layout_height="100dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#CAB5CD"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="100dp"
        card_view:contentPadding="16dp"
        android:layout_above="@id/card_view">

        <Button
            android:id="@+id/button7"
            android:layout_width="154dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:background="#3B0D53"
            android:text="Recharge"
            android:textColor="#CAB5CD" />

        <Button
            android:id="@+id/button8"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:background="#3B0D53"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="20dp"
            android:text="Electric bill"
            android:textColor="#CAB5CD" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view3"
        android:layout_below="@id/card_view"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="#CAB5CD"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="100dp"
        card_view:contentPadding="16dp"
        android:layout_above="@id/card_view">

        <Button
            android:id="@+id/button3"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:background="#3B0D53"
            android:backgroundTint="#3B0D53"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:text="Check Balance"
            android:textColor="#CAB5CD" />

        <Button
            android:id="@+id/button4"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:background="#3B0D53"
            android:backgroundTint="#3B0D53"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="110dp"

            android:text="History"
            android:textColor="#CAB5CD" />
    </androidx.cardview.widget.CardView>

</LinearLayout>
